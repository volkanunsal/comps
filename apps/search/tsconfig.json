{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    },
    "skipLibCheck": true,
    "strictFunctionTypes": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
